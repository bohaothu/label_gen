@Article{Mueller-R2005a,
	author = 			 {R. M{\"u}ller},
	title = {An optimized toolchain for predicting directivity patterns
	from digital representations of biological shapes},
	journal = 		 {J. Acoust. Soc. Am.},
	year = 				 2005,
	volume =			 118,
	number =			 3,
	pages =				 2000,
  abstract = {Animals have evolved intricate shapes which diffract
  emitted or received sound and thereby generate a specific
  directivity pattern. Computer-tomographic methods can generate
  high-resolution digital representations of these morphological
  structures in the form of three-dimensional voxel arrays. However,
  predicting acoustic directivity patterns from these representations
  with numerical methods can incur high computational cost, e.g., for
  large structures with fine detail and/or high wave numbers (as in
  bats and dolphins). Here, the design of a toolchain is described
  which can handle all steps of deriving a directivity prediction from
  a voxel representation: generation of a finite-element mesh,
  assembly of the system matrix, computation of an approximate
  solution, forward projection into the far field. All individual
  operations are performed by self-contained tools, which communicate
  through files. This gives access to intermediate results and limits
  re-execution upon parameter changes to downstream steps. At each
  stage, optimizations can be made based on the specifics of the
  problem such as the regular structure of the voxel array and the
  distance independence of the directivity. Use of these optimizations
  has resulted in a highly efficient performance, which is documented
  by measures for execution speed, memory usage, and accuracy}
}
