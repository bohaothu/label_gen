  number =       "RNR-92-010",
  institution =  "NASA NAS",
}

@TechReport{EVL-1992-47,
  year =         "1992",
  title =        "Measurement and Calibration of Static Distortion of
                 position data from 3{D} trackers",
  URL =          "http://visinfo.zib.de/EVlib/Show?EVL-1992-47",
  author =       "Steve Bryson",
  abstract =     "Three-dimensional trackers are becoming increasingly
                 important as user inputs in interactive computer
                 systems. These trackers output the three-dimensional
                 position, and often the orientation, of a sensor in
                 space. The three-dimensional tracking is often,
                 however, highly distorted and inaccurate. The purpose
                 of this paper is to discuss methods for the measurement
                 and characterization of the static distortion of the
                 position data. When the distortion is constant, various
                 methods can be used to calibrate the data from the
                 tracker to increase accuracy. Several preliminary
                 methods are discussed in this paper, including
                 polynomial and weighted lookup methods. The measurement
                 and calibration methods are applied to the Polhemus
                 electromagnetic tracking system, but are applicable to
                 tracking systems based on other technologies.",
  language =     "en",
  month =        apr,
