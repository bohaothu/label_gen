@Article{DKE07,
  author =       "Heiner Stuckenschmidt and Michel Klein",
  title =        "Reasoning and change management in modular
                 ontologies",
  journal =      "Data Knowledge Engineering (DKE)",
  volume =       "63",
  number =       "2",
  pages =        "200--223",
  year =         "2007",
  abstract =     "The benefits of modular representations are well known
                 from many areas of computer science. While in software
                 engineering modularization is mainly a vehicle for
                 supporting distributed development and re-use, in
                 knowledge representation, the main goal of
