@InProceedings{HEALTHINF10-diabetes,
  author =       "Mark Hoogendoorn and Michel C. A. Klein and Natalyia
                 Mogles",
  title =        "An intelligent support system for diabetic patients",
  booktitle =    "Proceedings of the Third International Conference on
                 Health Informatics (HEALTHINF 2010)",
  year =         "2010",
  editor =       "Ana Fred and Joaquim Filipe and Hugo Gamboa",
  publisher =    "INSTICC Press",
  address =      "Valencia, Spain",
  month =        jan # "~20 -- 23,",
  abstract =     "Diabetes Mellitus type I is a disease that forces
                 patients to manage their blood glucose level manually,
                 by balancing their activities, food intake and insulin
                 dosages. There is a large experience with building
                 computational models for blood glucose level in
                 diabetic patients, which are primarily used to design
                 the medication regime for a specific patient. In this
                 paper, the design of an intelligent support application
                 is presented that uses a standard model for blood
                 glucose level to give patients real-time advice about
                 insulin and food intake. The advice is based on
                 measurements of blood glucose level, the electronic
                 agenda of a patient and model-based predictions of the
                 glucose level in the near future. A simulation of the
                 application is presented that illustrates the
                 feasibility of the system.",
}

@InProceedings{HEALTHINF10-bas,
  author =       "Fiemke Both and Mark Hoogendoorn and Michel C. A.
