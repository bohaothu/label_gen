@article{ ISI:000186092700010,
Author = {Vieira, V and Pintureau, B and Tavares, J and McNeil, JN},
Title = {{Differentiation and gene flow among island and mainland populations of
   the true armyworm, Pseudaletia unipuncta (Haworth) (Lepidoptera :
