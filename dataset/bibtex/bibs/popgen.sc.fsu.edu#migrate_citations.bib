Unique-ID = {{ISI:000247870700053}},
}

@article{ ISI:000247758100012,
Author = {Manoukis, Nicholas C.},
Title = {{FORMATOMATIC: a program for converting diploid allelic data between
   common formats for population genetic analysis}},
Journal = {{MOLECULAR ECOLOGY NOTES}},
Year = {{2007}},
Volume = {{7}},
Number = {{4}},
Pages = {{592-593}},
Month = {{JUL}},
Abstract = {{There has been a great increase in both the number of population
   genetic analysis programs and the size of data sets being studied with
   them. Since the file formats required by the most popular and useful
   programs are variable, automated reformatting or conversion between
   them is desirable. (FORMATOMATIC) is an easy to use program that can
   read allelic data files in (GENEPOP), (RAW ( CSV)) or (CONVERT) formats
   and create data files in nine formats: RAW (( CSV), ARLEQUIN, GENEPOP,
