@techreport{BRICS-RS-95-21,
  author = 	 "Henriksen, Jesper G. and Jensen, Ole J. L. and
                  J{\o}rgensen, Michael E. and Klarlund, Nils and
                  Paige, Robert and Rauhe, Theis and Sandholm,
