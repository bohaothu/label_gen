@InProceedings{rahmati:context,
  author      =	{Ahmad Rahmati and Lin Zhong},
  title	      =	{{Context for Wireless: Context-sensitive energy-efficient
		wireless data transfer}},
  booktitle   =	{Proceedings of the Fifth International Conference on Mobile
		Systems, Applications, and Services (MobiSys)},
  month	      =	jun,
  year	      =	{2007},
