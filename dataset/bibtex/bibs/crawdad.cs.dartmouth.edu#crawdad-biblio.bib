@InProceedings{wang:adaptive,
  author      =	{Wei Wang and Vikram Srinivasan and Mehul Motani},
  title	      =	{Adaptive contact probing mechanisms for delay tolerant
		applications},
  booktitle   =	{MobiCom '07: Proceedings of the 13th annual ACM
		international conference on Mobile computing and networking},
  year	      =	{2007},
