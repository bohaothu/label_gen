@Article{Xie:2008:TMS,
  author =       "Mengjun Xie and Heng Yin and Haining Wang",
  title =        "Thwarting {E}-mail Spam Laundering",
  journal =      j-TISSEC,
  volume =       "12",
  number =       "2",
  pages =        "13:1--13:??",
  month =        dec,
  year =         "2008",
  CODEN =        "ATISBQ",
  DOI =          "http://doi.acm.org/10.1145/1455518.1455525",
