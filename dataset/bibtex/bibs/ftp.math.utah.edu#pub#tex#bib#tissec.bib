@Article{Kogan:2006:IER,
  author =       "Noam Kogan and Tamir Tassa",
  title =        "Improved efficiency for revocation schemes via
                 {Newton} interpolation",
  journal =      j-TISSEC,
  volume =       "9",
  number =       "4",
  pages =        "461--486",
  month =        nov,
  year =         "2006",
