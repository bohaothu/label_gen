@Article{Wright:2008:PLA,
  author =       "Matthew K. Wright and Micah Adler and Brian Neil
                 Levine and Clay Shields",
  title =        "Passive-Logging {Attacks Against Anonymous
                 Communications Systems}",
  journal =      j-TISSEC,
  volume =       "11",
  number =       "2",
  pages =        "3:1--3:??",
  month =        mar,
  year =         "2008",
