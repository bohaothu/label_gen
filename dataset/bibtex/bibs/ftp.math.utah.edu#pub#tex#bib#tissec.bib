@Article{Iwaihara:2007:RBA,
  author =       "Mizuho Iwaihara and Ryotaro Hayashi and Somchai
                 Chatvichienchai and Chutiporn Anutariya and Vilas
                 Wuwongse",
  title =        "Relevancy-based access control and its evaluation on
