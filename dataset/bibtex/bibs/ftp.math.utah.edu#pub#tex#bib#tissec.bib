@Article{Bethencourt:2009:NTP,
  author =       "John Bethencourt and Dawn Song and Brent Waters",
  title =        "New Techniques for Private Stream Searching",
  journal =      j-TISSEC,
  volume =       "12",
  number =       "3",
  pages =        "16:1--16:??",
  month =        jan,
  year =         "2009",
