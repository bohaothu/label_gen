	Date-Modified = {2009-10-30 22:39:30 -0400},
	Journal = {Exp Brain Res},
	Journal-Full = {Experimental brain research. Experimentelle Hirnforschung. Exp{\'e}rimentation c{\'e}r{\'e}brale},
	Mesh = {Electromyography; Humans; Jaw; Masseter Muscle; Mechanoreceptors; Muscle Contraction; Muscle Spindles; Reflex, Stretch},
