	Month = {Jun},
	Number = {3},
	Pages = {601-13},
	Pmid = {20454785},
	Pst = {ppublish},
	Title = {A novel shoulder-elbow mechanism for increasing speed in a multijoint arm movement},
	Volume = {203},
	Year = {2010},
