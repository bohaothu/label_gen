@inproceedings { icsy:dspace:243,
   author = { Achter, Viktor and Seifert, Marc and Lang, Ulrich and Götze, Joachim and Reuther, Bernd and Müller, Paul },
   title = { Nachhaltigkeitsstrategien bei der Entwicklung eines Lernportals im D-Grid },
   booktitle = {  },
   year = 2009,
   month = {April},
   day = { 01 },
   url = { http://dspace.icsy.de/handle/123456789/243 },
   abstract = { In dem Projekt SuGI (Sustainable Grid Infrastructures, gefördert durch das BMBF) wird unter anderem ein Lernportal entwickelt, welches auf die besonderen An-
forderungen des D-Grids ausgerichtet ist. In diesem Umfeld spielen die heterogenen
Communities, sowie die Nachhaltigkeit der Prozesse und der erstellten Produkte eine
zentrale Rolle. Darunter fallen unter anderem die zum Teil sehr unterschiedlichen Vorkenntnisse von Anwendern und Grid-Experten, sowie die ressourcenschonende Bereitstellung und Archivierung von Inhalten und Erkenntnissen aus dem Gridumfeld oder
die unterschiedlichen Zielsetzungen zwischen Rechenzentren von KMUs und solchen
von etablierten Forschungsinstitutionen.
Dieser Beitrag beschreibt die Konzeption und das Vorgehen bei der Entstehung des
D-Grid Lernportals. Hierbei wurde der Entwicklungsprozess auf die speziellen Anforderungen von Lernportalen ausgerichtet, welche vor allem in der Dynamik der Inhalte und den komplexen Bedürfnissen der heterogenen Grid-Communities sowie den vielfältigen Formen des Lernens liegen. Dazu wurde ein evolutionäres Vorgehensmodell gewählt, wobei mehrere Generationen in einem durch Feedback unterstützten, rekursiven wie auch iterativen Prozess entstehen. Abschließend werden Ergebnisse der aktuellen Evaluierung des Lernportals präsentiert. },
}

@mastersthesis { icsy:dspace:34,
   comment = { Diplomarbeit },
   school = { University of Kaiserslautern, Germany },
   author = { Kannenberg, Branko },
   title = { Entwicklung eines generischen Verfahrens für den Austausch von Ressourcen-Informationen },
   year = 2001,
   month = {November},
   url = { http://dspace.icsy.de/handle/123456789/34 },
   abstract = { Das Internet ist kein heterogenes Gebilde, es besteht aus den unterschiedlichsten Topologien, Hardware jeder Art und natürlich wird es mittlerweile von Anwendungen für alle denkbaren Aufgabenbereiche genutzt. Eine derart breite Palette an Anwendungen stellt auch große Anforderungen an die Datenkommunikation, die über das Netz abgewickelt wird. Trotzdem verwendet nahezu jede heute entwickelte Software die TCP/IP?Suite, da sie sich zum Standard? Protokoll?Stack im Internet entwickelt hat. TCP/IP bietet sehr einfache, grundlegende Kommunikationsdienste, da es nicht als Spezialprotokoll für bestimmte Aufgaben konzipiert wurde, sondern sich über Jahre zusammen mit dem Internet entwickelt hat und daher als Basis für sehr unterschiedliche Aufgaben dienen mußte. Dies hat zur Folge, daß viele Anwendungen, die besondere Anforderungen an die Datenkommunikation stellen, entweder sehr aufwendig ihr eigenes Protokoll implementieren oder mit einem evtl. ineffizientem Dienst leben müssen. Setzt eine Applikation ein eigenes Protokoll ein, so muß sichergestellt werden, daß auch die Gegenseite dieses Protokoll verwendet. Zudem verlangt die Implementierung eines eigenen Protokolls recht weitgehendes Know How im Bereich Netzwerkprogrammierung, was nicht immer vorhanden ist. Neuere Entwicklungen im Bereich der Datenkommunikation, wie z.B. Quality of Service (QoS) werden meist nicht ausgenutzt, da sich die Entwickler neuer Anwendungen nur auf das Vorhandensein des Standard?TCP/IP?Stacks verlassen können. },
}

