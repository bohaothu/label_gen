@mastersthesis { icsy:dspace:51,
   comment = { Diplomarbeit },
   school = { University of Kaiserslautern, Germany },
   author = { Faust, Nicole },
   title = { Modellierung und Design von virtuellen Organisationen in Grid-Architekturen },
   year = 2006,
   month = {March},
   url = { http://dspace.icsy.de/handle/123456789/51 },
   abstract = { In dieser Arbeit wird untersucht, ob sich virtuelle Organisationen mittels Grid-Architekturen realisieren lassen und wie diese Realisation aussehen kann. UML dient dabei zur Darstellung der gewonnenen Erkenntnisse. Der erste Teil dieser Arbeit erläutert die zur Untersuchung notwendigen Grundlagen. Zu diesen Grundlagen zählen die virtuellen Organisationen, Workflows und die Modellierungssprache UML. Die Betrachtung des Workflows ist deshalb so wichtig, weil dieser während der Kooperation von Unternehmen den Zusammenhalt einer virtuellen Organisation dadurch sichert, dass ein gemeinsames unternehmerisches Ziel verfolgt wird. Ein weiterer wichtiger Punkt, der in die Modellierung einfließen soll, sind sozio-technische Aspekte. Diese finden sich sowohl bei virtuellen Organisationen als auch bei den Workflows. Im zweiten Teil erfolgt die Modellbildung und die Modellierung von virtuellen Organisationen auf der Grundlage der Kooperationsbeziehungen von Unternehmen. Dabei wird als IT-Infrastruktur das Grid Computing genutzt. Drei Grid-Architekturen wurden für eine Bewertung ausgewählt. Mit dieser Bewertung soll geklärt werden, welche Eignung die drei Grid-Architekturen für die Abbildung einer virtuellen Organisation und deren Workflows im Grid aufweisen. Dazu werden Anforderungen von virtuellen Organisationen als auch von Workflows als Bewertungsgrundlage herangezogen. Bei der Modellierung dieser Worklfows wurde auf UML zurückgegriffen. Da UML selbst keine Notationselemente für sozio-technische Aspekte enthält, wird hierfür eine geeignete Erweiterung für UML angegeben, mit deren Hilfe diese Aspekte dargestellt werden können. Anschließend werden die zuvor beschriebenen Teile des Gesamtmodells in UML-Diagrammen dargestellt. Der dritte Teil befasst sich mit der Anwendung der gewonnenen Erkenntnisse aus dem vorangegangenen Teil der Arbeit auf die Flächennutzungsplanung (FNP). Dazu wird konkret ein Teilprozess der Flächennutzungsplanung ausgewählt und dieser auf der Grundlage der vorangegangenen Modellbildung modelliert. },
}

@inproceedings { icsy:dspace:106,
   author = { Sarnowski, Daniella and Kleinberger, Thomas },
   title = { Informationsdienstleistung und multimediale Wissensorganisation für die Filmwissenschaft und den Medienstandort Babelsberg },
   booktitle = { Proc. ISKO 2001 Wissensorganisation und Edutainment, Berlin, Deutschland, 21.3-23.3.2001 },
   year = 2001,
   url = { http://dspace.icsy.de/handle/123456789/106 },
   abstract = { In der Neukonzeption des Hochschulinformationssystems wurde nicht nur die Bibliothek ausgebaut, sondern auch das Zeitungsausschnittarchiv, die heutige Pressedokumentation. Der Nonprintbereich wurde als Mediathek konzipiert, die aus einer Videothek, einem Audiobereich und dem HFF-Filmarchiv besteht. Die Hochschulbibliothek/Mediathek sieht sich damit als Informations-Provider, der unabhängig von der Medienform als Wissenslotse fungiert. Im Filmarchiv der HFF wird seit ca. Mitte des Jahres 1999 das Content Management System media archive® der Firma tecmath AG für die Archivierung und Dokumentation der studentischen Abschlussarbeiten eingesetzt. In Ergänzung zur bisherigen textuellen Dokumentation in einer Datenbank erlaubt media archive® die Archivierung multimedialer Inhalte, in unserem Falle Kurzfilme. Als Lösung für das Content Management unterstützt das System dabei den gesamten Arbeitsfluss beginnend von der Akquisition (Digitalisierung) über die Dokumentation und Archivierung bis hin zur Recherche und Bereitstellung von Inhalten über Grobschnitt und Export. In dezentralen Archiven können unterschiedliche Formate wie Video-, Ton-, Text- oder Bildmaterial beginnend von kleinen Kapazitäten, die vollständig in direktem Zugriff sind, bis hin zu großen Archiven mit mehreren Terabyte und hierarchischem Speichermanagement organisiert werden. Zugriffe sind über das interne Computernetzwerk oder auch über Internet möglich, jeweils mit der angepassten Übertragung nach verfügbarer Bandbreite von Keyframes über RealVideo- oder MPEG-1-Streaming bis hin zum Download. },
}

