@Inproceedings{DesHon96a,
  author     = {Desain, P. and Honing, H.},
  title      = {Modeling Continuous Aspects of Music Performance: Vibrato and Portamento}, 
  booktitle  = {Proceedings of the 4th International Music Perception and Cognition Conference},
