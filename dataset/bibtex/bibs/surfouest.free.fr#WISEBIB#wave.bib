@ARTICLE{lee_etal:2000_Phys.Fluids_12_1_54a,
  AUTHOR = { Lee, M. M.  and  Chwang, A. T. },
  TITLE = {Scattering and radiation of water waves by permeable barriers },
  JOURNAL = {  Phys. Fluids},
  YEAR = {2000},
