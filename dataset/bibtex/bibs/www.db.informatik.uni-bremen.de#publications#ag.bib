@INPROCEEDINGS{Lipeck:1985:TFAIS,
AUTHOR      ="Udo Walter Lipeck and Hans-Dieter Ehrich and Martin Gogolla",
TITLE       ="{Specifying Admissibility of Dynamic Database Behaviour Using Temporal Logic}",
BOOKTITLE   ="{Proc. IFIP Working Conf. Theoretical and Formal Aspects of Information Systems~(TFAIS'85)}",
