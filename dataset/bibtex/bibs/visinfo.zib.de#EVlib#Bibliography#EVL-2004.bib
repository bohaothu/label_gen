@InProceedings{EVL-2004-35,
  title =        "An Image-Based Multiresolution Model for Interactive
                 Foliage Rendering",
  address =      "Plzen, Czech Republic",
  month =        feb,
  editor =       "V. Skala",
  booktitle =    "Journal of WSCG",
  publisher =    "UNION Agency - Science Press",
  year =         "2004",
  URL =          "http://visinfo.zib.de/EVlib/Show?EVL-2004-35",
  author =       "Javier Lluch and Emilio Camahort and Roberto
                 Viv{'{o}}",
  abstract =     "This paper presents a new method for realistic
                 real-time rendering of tree foliage. Some approaches to
                 this problem have been presented before but the quality
                 of their results was not maintainable with respect to
                 changes in view vector and observer distance. Our
                 method is based on a hierarchy of images obtained from
                 pre-processing the botanical tree structure (an
                 L-system) and storing the information in a texture data
                 tree without increasing rendering time. The texture
                 tree is traversed for each frame and an appropriate set
                 of images is extracted and blended with the previous
                 image set. The number of polygons is dramatically
                 reduced - thus enabling interactive visualization and
