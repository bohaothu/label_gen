@InCollection{EVL-2004-222,
  pages =        "47--66",
  year =         "2004",
  title =        "Scalar-field-guided adaptive shape deformation and
                 animation",
  URL =          "http://visinfo.zib.de/EVlib/Show?EVL-2004-222",
  author =       "Jing Hua and Hong Qin",
  abstract =     "In this paper, we propose a novel scalar-field-guided
                 adaptive shape deformation (SFD) technique founded on
                 PDE-based flow constraints and scalar fields of
