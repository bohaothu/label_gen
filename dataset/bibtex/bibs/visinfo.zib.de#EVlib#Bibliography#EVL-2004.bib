@InProceedings{EVL-2004-128,
  year =         "2004",
  title =        "Linking Scientific and Information Visualization with
                 Interactive 3{D} Scatterplots",
  author =       "Robert Kosara and Gerald N. Sahling and Helwig
                 Hauser",
  URL =          "http://visinfo.zib.de/EVlib/Show?EVL-2004-128",
  abstract =     "3D scatterplots are an extension of the ubiquitous 2D
