@InProceedings{EVL-2004-125,
  year =         "2004",
  title =        "Evaluation of {NURBS} surfaces: an overview based on
                 runtime efficiency",
  author =       "H. S{\'{a}}nchez and A. Moreno and D. Oyarzun and A.
                 Garc{\'{i}}a-Alonso",
  URL =          "http://visinfo.zib.de/EVlib/Show?EVL-2004-125",
  abstract =     "Dynamic tessellation of (trimmed) NURBS surfaces is an
