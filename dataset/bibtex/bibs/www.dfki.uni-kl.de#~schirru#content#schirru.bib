@INPROCEEDINGS{WMS+09,
  author = {Martin Wolpers and Martin Memmel and Hans-Christian Schmitz and Martin
	Friedrich and Marco Jahn and Rafael Schirru},
  title = {Usage metadata based support for learning activity reflection},
  booktitle = {Proceedings of I-KNOW '09},
  year = {2009},
  editor = {Klaus Tochtermann and Hermann Maurer},
  pages = {354--359},
  month = {September},
  organization = {Know-Center, Graz},
  publisher = {Journal of Universal Computer Science},
  note = {ISBN 978-3-85125060-2},
  abstract = {An important activity for the learner while learning is the reflection
	on the learning path and strategy. So far, not many tools provide
	an automatic support for the reflection on the learning activities.
	Here, we describe our approach to enable reflection with the help
	of usage and contextual metadata. We describe how we capture usage
	information and provide algorithms like the identification of similar
	users, contents and tools for reflection like a learner Zeitgeist
	application or the elicitation of learning paths.}
}

