@ARTICLE{WMK+09,
  author = {Martin Wolpers and Martin Memmel and Joris Klerkx and Gonzalo Parra
	and Bram Vandeputte and Erik Duval and Rafael Schirru and Katja Niemann},
  title = {Bridging Repositories to form the MACE Experience},
  journal = {New Review of Information Networking},
  year = {2009},
  volume = {14},
  pages = {102--116},
  number = {2},
  month = {November},
  abstract = {This paper reports on our experiences in bridging learning repositories
	on architecture within the MACE system. In order to make access to
	architectural learning resources simple and easy for students and
	teachers, we rely heavily on standards. We discuss the concepts behind
	the MACE system, describe related problems, and how we solve them
	by employing and modifying standards from the computer science and
	architecture. By bringing together numerous heterogeneous repositories,
	combining and relating metadata of their learning resources and incorporating
	social community support, we enable open access while still respecting
	organizational and legislative issues of all participating repositories.},
  doi = {10.1080/13614570903359423},
